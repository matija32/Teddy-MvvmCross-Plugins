<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleAudioPlayer.Demo.Core.Views.MainPage">
  <StackLayout>
    <Button Text="Open &amp; Play" Command="{Binding OpenCommand}" VerticalOptions="Center"
           HorizontalOptions="Center" />
    <Button Text="Play" Command="{Binding PlayCommand}" VerticalOptions="Center"
           HorizontalOptions="Center" />
    <Button Text="Pause" Command="{Binding PauseCommand}" VerticalOptions="Center"
           HorizontalOptions="Center" />
    <Button Text="Stop" Command="{Binding StopCommand}" VerticalOptions="Center"
           HorizontalOptions="Center" />
  </StackLayout>
</ContentPage>