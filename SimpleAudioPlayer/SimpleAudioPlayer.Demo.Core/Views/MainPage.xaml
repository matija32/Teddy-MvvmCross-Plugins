<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleAudioPlayer.Demo.Core.Views.MainPage"
             xmlns:res="clr-namespace:SimpleAudioPlayer.Demo.Core.Resources;assembly=SimpleAudioPlayer.Demo.Core">
  <Grid>
    <Label Text="{res:Translate MainPageTitle}"
           VerticalOptions="Start"
           HorizontalOptions="Center"
           StyleId="MainPageTitleLbl" />
    <Button Text="Play Audio" Command="{Binding PlayCommand}" VerticalOptions="Center"
           HorizontalOptions="Center" />
  </Grid>
</ContentPage>